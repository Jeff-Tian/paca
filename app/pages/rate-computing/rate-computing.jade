ion-navbar('*navbar'="")
    ion-title
        button(clear="", '(click)'="updateValues()")
            ion-icon(name="refresh")
        span 到期一次性还款借贷
ion-content(padding="", class="page1")
    ion-item
        ion-label
            | 期初借入(元):
        ion-input(type="number", '(change)'="updateValues()", '(focus)'="changeSource('beginIn')", '[(ngModel)]'="model.beginIn", clearInput="", placeholder="期初借入 xxx 元")
    ion-item
        ion-label
            | 借贷时长(以月为单位):
        ion-input(type="number", '(change)'="updateValues()", '(focus)'="changeSource('duration')", '[(ngModel)]'="model.duration", clearInput="", placeholder="借贷时长(以月为单位)")
    ion-item
        ion-label
            | 期末待还(元):
        ion-input(type="number", '(change)'="updateValues()", '(focus)'="changeSource('endOut')", '[(ngModel)]'="model.endOut", clearInput="", placeholder="期末待还 xxx 元")
    ion-item
        ion-label(stacked="") 总利率: {{displays.totalInterestRate.percentFormat}};
        ion-input(type="number", '(change)'="updateValues()", '(focus)'="changeSource('totalInterestRate')", '[(ngModel)]'="model.totalInterestRate", clearInput="", placeholder="利率")
    ion-item
        ion-label 总利息:
        ion-input(type="number", '(change)'="updateValues()", '(focus)'="changeSource('totalInterest')", '[(ngModel)]'="model.totalInterest", clearInput="", placeholder="利息")
    ion-item
        ion-label(stacked="") 平均年利率: {{displays.annualInterestRate.percentFormat}};
        ion-input(type="number", '(change)'="updateValues()", '(focus)'="changeSource('annualInterestRate')", '[(ngModel)]'="model.annualInterestRate", clearInput="", placeholder="平均年利率")
