        ion-label 平均年利息:
        ion-input(type="number", '(change)'="updateValues()", '(focus)'="changeSource('annualInterest')", '[(ngModel)]'="model.annualInterest", clearInput="", placeholder="平均年利息")
    ion-item
        ion-label(stacked="") 平均月利率: {{displays.monthlyInterestRate.percentFormat}};
        ion-input(type="number", '(change)'="updateValues()", '(focus)'="changeSource('monthlyInterestRate')", '[(ngModel)]'="model.monthlyInterestRate", clearInput="", placeholder="平均月利率")
    ion-item
        ion-label 平均月利息:
        ion-input(type="number", '(change)'="updateValues()", '(focus)'="changeSource('monthlyInterest')", '[(ngModel)]'="model.monthlyInterest", clearInput="", placeholder="平均月利息")
